<!DOCTYPE html>
<html>
  <head>
    <title>Syukuhaku</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag   %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'               %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-default">
          <% if user_signed_in? %>
            <%= link_to "HOME", "/" %>
            <%= form_tag("/rooms",:method => 'get') do %>
              <%= text_field_tag :search %>
              <%= submit_tag '探す', :name => nil %>
            <% end %>
            <%= form_tag("/rooms/keyword",:method => 'get') do %>
              <%= text_field_tag :search %>
              <%= submit_tag '探す', :name => nil %>
            <% end %>
            <%= link_to "登録済みルーム", "/users/#{current_user.id}/post_room" %>
            <%= link_to "予約済みルーム", "/users/#{current_user.id}/reserved_room" %>
            <%= link_to "ユーザー設定", "/users/account" %>
            <%= link_to "ルーム登録", "/rooms/new"       %>
            <%= link_to "ログアウト", "/users/sign_out"  %>
            <%= current_user.user_name                 %>
          <% else %>
            <%= link_to "HOME", "/" %>
            <%= link_to "ログイン", "/users/sign_in" %>
            <%= link_to "新規登録", "/users/sign_up" %>
          <% end %>
      </nav>
    </header>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert   %></p>
    <%= yield %>
  </body>
</html>
